#include <unistd.h>

int		ft_putchar(char c)
{
	write(1, &c, 1);
	return (0);
}

int		base_len(int size)
{
	int a;

	if (size == 1)
	{
		return (7);
	}
	a = base_len(size - 1) + (size / 2) * 2 + 2;
	return a
}

